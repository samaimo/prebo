
  <!--   ヘッダー    -->
  <%= render 'shared/header' %>

   <!--メイン-->
    <div class="main">
      <ul class="e-d-button">
        <li>
          <%= link_to edit_present_path(@present.id) do %>
            編集する
          <% end %>
        </li>
        <li>
          <%= link_to present_path(@present.id), data: {turbo_method: :delete}, class:"box-destroy" do %>
            削除する
          <% end %>
        </li>
      </ul>
      <hr>
      <div class="box001">
        <%= link_to box_path(@box.id) do %>
          <%= image_tag @box.image , class:"image_box001" %>
        <% end %>
        <div class="text001-box-wrapper">
          <div class="text001-box">
            <div class="type-name">
              <%= @box.box_name %> さんへ
            </div>
            <div class="type-name">
              <span class="point">⚫︎</span> 
                <% if @box.occupation.present? %>
                  <%= @box.occupation %>
                <% else %>
                  <span class="null">未登録</span>
                <% end %>
              </div>
          </div>
          <hr class="border">
          <div class="present-title001">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
              <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
            </svg>
            <h4 class="show-present-name">
              <%= @present.present_name %>
            </h4>
          </div>

        </div>
      </div>
      <div class="main-title">
                <!-- ここから -->

        <!-- ここまで -->
